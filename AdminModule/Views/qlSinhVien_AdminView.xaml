                                </DataTemplate.Triggers>
                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </newcontrol:DatagridNew2.Columns>
            </newcontrol:DatagridNew2>
        </Grid>
    </Border>
</UserControl>
